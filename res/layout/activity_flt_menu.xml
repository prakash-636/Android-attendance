<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/gradiend"
    tools:context="com.example.attender.FltMenuActivity" >

    <Button
        android:id="@+id/logoutbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="23dp"
        android:background="@drawable/roundedbutton"
        android:text="logout" />

    <Button
        android:id="@+id/addStudentbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/logoutbtn"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/markAttendancebtn"
        android:background="@drawable/roundedbutton"
        android:text="Add student" />

    <Button
        android:id="@+id/viewStudentbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/addStudentbtn"
        android:layout_alignRight="@+id/addStudentbtn"
        android:layout_below="@+id/addStudentbtn"
        android:layout_marginTop="14dp"
        android:background="@drawable/roundedbutton"
        android:text="view student" />

    <Button
        android:id="@+id/markAttendancebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/logoutbtn"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/viewStudentbtn"
        android:layout_marginTop="14dp"
        android:background="@drawable/roundedbutton"
        android:text="Mark attendance" />

    <Button
        android:id="@+id/viewAttendancebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/markAttendancebtn"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/roundedbutton"
        android:text="view attendance" />

</RelativeLayout>
